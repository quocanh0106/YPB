{% comment %}
    Renders product media

    Accepts:
    - media: {Object} Product Media object
    - loop: {Boolean} Enable video looping (optional)
    - variant_image: {Boolean} Whether or not media is associated with a variant

    Usage:
    {% render 'product-media',
      media: media,
      loop: section.settings.enable_video_looping,
      variant_image: true
    %}
{% endcomment %}

{%- if media.media_type == 'image' -%}
  <div class="relative w-full h-full">
    <img
      srcset="{%- if width >= 330 -%}
        {{ media.preview_image | image_url: width: 330 }} 165w,{%- endif -%}
      {%- if width >= 720 -%}
        {{ media.preview_image | image_url: width: 720 }} 360w,{%- endif -%}
      {%- if width >= 1066 -%}
        {{ media.preview_image | image_url: width: 1066 }} 533w,{%- endif -%}
      {%- if width >= 1440 -%}
        {{ media.preview_image | image_url: width: 1440 }} 720w,{%- endif -%}
      {%- if width >= 1880 -%}
        {{ media.preview_image | image_url: width: 1880 }} 940w,{%- endif -%}
      {%- if width >= 2500 -%}
        {{ media.preview_image | image_url: width: 2500 }} 1066w,{%- endif -%}"
      sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
      src="{{ media.preview_image | image_url }}"
      {% if lazy_load %}
      loading="lazy"
      {% endif %}
      class="product-aspect-ratio block w-full h-auto object-cover bg-image-placeholder bg-no-repeat bg-cover bg-center text-transparent"
      width="{{ media.width }}"
      height="{{ media.height }}"
      data-media-id="{{ media.id }}"
      alt="{{ media.preview_image | split: "/" | last | replace: "-", " " | split: "." | first }}">
  </div>
{%- else -%}
  {%- case media.media_type -%}
    {%- when 'external_video' -%}
      {%- assign video_class = 'js-' | append: media.host -%}
      {%- if media.host == 'youtube' -%}
        {{ media | external_video_url: autoplay: false, loop: true, playlist: media.external_id | external_video_tag: class: "w-full product-aspect-ratio", loading: "lazy" }}
      {%- else -%}
        {{ media | external_video_url: autoplay: false, loop: true | external_video_tag: class: "w-full product-aspect-ratio", loading: "lazy" }}
      {%- endif -%}
    {%- when 'video' -%}
      {{ media | media_tag: image_size: "2048x", autoplay: false, loop: true, class: 'w-full product-aspect-ratio', controls: true, preload: "none" }}
    {%- when 'model' -%}
      {{ media | media_tag: image_size: "2048x", toggleable: true, class: 'w-full product-aspect-ratio' }}
  {%- endcase -%}
{%- endif -%}
