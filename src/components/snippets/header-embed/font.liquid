      font-weight: bold;
    }
    @font-face {
      font-family: 'SVN-Nexa';
      src: url({{ 'SVN-Nexa-Light.ttf' | asset_url }});
      font-weight: 300;
    } */
  {% endif %}
{% endstyle %}