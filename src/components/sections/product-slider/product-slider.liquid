{%- if section.settings.collection != blank -%}
  {%- style -%}
    [data-section-id="{{ section.id }}"] {
      background: {{ section.settings.background_color }};
      padding-top: {{ section.settings.padding_top_mb }}px;
      padding-bottom: {{ section.settings.padding_bottom_mb }}px;
    }

    [data-section-id="{{ section.id }}"] .slider-slide { 
      max-width: calc(100%/{{ section.settings.product_per_row_mobile }} - {{ 12 | times: section.settings.product_per_row_mobile | minus: 12 | divided_by: section.settings.product_per_row_mobile }}px);
    }

    @media screen and (min-width: 768px) {
      [data-section-id="{{ section.id }}"] .slider-slide {
        max-width: calc(100%/{{ section.settings.product_per_row_tablet }} - {{ 16 | times: section.settings.product_per_row_tablet | minus: 16 | divided_by: section.settings.product_per_row_tablet }}px);
      }
    }

    @media screen and (min-width: 1024px) {
      [data-section-id="{{ section.id }}"] {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
      [data-section-id="{{ section.id }}"] .slider-slide {
        max-width: calc(100%/{{ section.settings.product_per_row }} - {{ 16 | times: section.settings.product_per_row | minus: 16 | divided_by: section.settings.product_per_row }}px);
      }
    }
  {%- endstyle -%}
  <div data-section-id="{{ section.id }}">
    <div class="page-width relative">
      <div class="flex items-center justify-between px-4 md:px-0 mb-4">
        <h2 class="text-lg font-semibold lg:text-2xl">{{ section.settings.collection.title | escape }}</h2>
        <a href="{{ section.settings.collection.url }}" class="flex items-center dark-link text-sm lg:text-base font-bold capitalize no-underline font-heading tracking-wide" title="{{ 'sections.product-slider.shop' | t }}">
          <span>{{ 'sections.product-slider.shop' | t }}</span>
          {%- render 'icon-next-nobox', class: "w-2 h-[13px] ml-2.5" -%}
        </a>
      </div>

      <slider-component class="block overflow-hidden">
        <button
          type="button"
          name="previous"
          aria-label="previous" 
          class="prev-{{ section.id }} absolute top-1/2 -translate-y-1/2 left-0 w-10 h-10 bg-transparent disabled:!bg-transparent shadow-button leading-none cursor-pointer transition-all hidden lg:flex items-center justify-center p-0 rounded-full border-0 {% if settings.country == 'UK' %}text-primary disabled:!text-primary-opacity-50{% else %}text-primary disabled:!text-primary-opacity-50{% endif %}">
          {%- render 'icon-prev', class: "w-7 h-7 " -%}
        </button>
        <ul class="flex slider-wrapper gap-3 md:gap-4 slider-on-mobile slider-on-tablet slider-on-desktop" id="Slider-{{ section.id }}">
          {%- for product in section.settings.collection.products limit: section.settings.limit -%}
            <li class="slider-slide" id="Slide-{{ section.id }}-{{ forloop.index }}">
              {%- render 'product-card', product: product, collection: section.settings.collection -%}
            </li>
          {%- endfor -%}
        </ul>
        <button
          type="button"
          name="next"
          aria-label="next"
          class="next-{{ section.id }} absolute top-1/2 -translate-y-1/2 right-0 w-10 h-10 bg-transparent disabled:!bg-transparent shadow-button leading-none cursor-pointer transition-all hidden lg:flex items-center justify-center p-0 rounded-full border-0 {% if settings.country == 'UK' %}text-primary disabled:!text-primary-opacity-50{% else %}text-primary disabled:!text-primary-opacity-50{% endif %}">
          {%- render 'icon-next', class: "w-7 h-7 " -%}
        </button>
        <div class="slider-counter caption !hidden">
          <span class="slider-counter--current">1</span>
          <span aria-hidden="true"> / </span>
          <span class="slider-counter--total">{{ section.settings.collection.products.count }}</span>
        </div>
        <div class="slider-dots mt-8 lg:mt-12"></div>
      </slider-component>
    </div>
  </div>
{%- endif -%}
{% schema %}
  {
    "name": "Products slider",
    "tag": "section",
    "settings": [
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "range",
        "id": "product_per_row",
        "label": "Products per row",
        "min": 1,
        "max": 5,
        "step": 1,
        "default": 4
      },
      {
        "type": "range",
        "id": "product_per_row_tablet",
        "label": "Products per row tablet",
        "min": 1,
        "max": 4,
        "step": 1,
        "default": 3
      },
      {
        "type": "range",
        "id": "product_per_row_mobile",
        "label": "Products per row mobile",
        "min": 1,
        "max": 3,
        "step": 1,
        "default": 2
      }, {
        "type": "range",
        "id": "limit",
        "label": "Limit",
        "min": 1,
        "max": 20,
        "step": 1,
        "default": 12
      }, {
        "type": "header",
        "content": "Common settings"
      }, {
        "type": "color",
        "id": "background_color",
        "label": "Background",
        "default": "#FAFAFA"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 50,
        "max": 150,
        "step": 1,
        "unit": "px",
        "label": "Padding Top DeskTop",
        "default": 64
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 50,
        "max": 150,
        "step": 1,
        "unit": "px",
        "label": "Padding Bottom Desktop",
        "default": 92
      }, {
        "type": "header",
        "content": "Mobile settings"
      }, {
        "type": "range",
        "id": "padding_top_mb",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding Top Mobile",
        "default": 32
      }, {
        "type": "range",
        "id": "padding_bottom_mb",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding Bottom Mobile",
        "default": 32
      }
    ],
    "presets": [
      {
        "name": "Products slider"
      }
    ]
  }
{% endschema %}