{% style %}
  [data-section-id="{{ section.id }}"] {
    background: {% if section.settings.background_color %}{{ section.settings.background_color }} {% endif %}{% if section.settings.background_image_mb %} url({{ section.settings.background_image_mb | img_url: 'master' }}){% endif %} no-repeat;
    background-size: cover;
    background-position: center center;
    margin-top: {{ section.settings.margin_top_mb }}px;
    margin-bottom: {{ section.settings.margin_bottom_mb }}px;
    padding-left: {{ section.settings.padding_vertical_mb }}px;
    padding-right: {{ section.settings.padding_vertical_mb }}px;
    padding-top: {{ section.settings.padding_horizontal_mb }}px;
    padding-bottom: {{ section.settings.padding_horizontal_mb }}px;

  }

  @media(min-width: 1024px) {
    [data-section-id="{{ section.id }}"] {
      background: {% if section.settings.background_color %}{{ section.settings.background_color }} {% endif %}{% if section.settings.background_image %} url({{ section.settings.background_image | img_url: 'master' }}){% endif %} no-repeat;
      background-size: cover;
      background-position: center center;
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
      padding-left: {{ section.settings.padding_vertical }}px;
      padding-right: {{ section.settings.padding_vertical }}px;
      padding-top: {{ section.settings.padding_horizontal }}px;
      padding-bottom: {{ section.settings.padding_horizontal }}px;
    }
  }
{% endstyle %}

<div class="{% if section.settings.fullwidth %}page-width-desktop{% else %}page-width{% endif %}{% if template.suffix contains 'reviews' %} !max-w-[1096px]{% endif %}">
  <div data-section-id="{{ section.id }}" class="rounded-lg lg:rounded-xl bg-cover py-10 px-6 lg:py-16 lg:px-12">
    <div class="max-w-[388px] text-center lg:text-left mx-auto lg:mx-0">
      {% if section.settings.heading != blank %}
        <{{ section.settings.heading_tag }} class="heading text-h3 font-heading mb-2 lg:text-h1" style="color: {{ section.settings.color_title }};">{{ section.settings.heading }}</{{ section.settings.heading_tag }}>
      {% endif %}
      {% if section.settings.description != blank %}
        <p class="text-sm lg:text-lg mb-4 lg:mb-6" style="color: {{ section.settings.color_subtitle }};">{{ section.settings.description }}</p>
      {% endif %}
      {% if section.settings.button_text != blank and section.settings.button_url != blank %}
        <a href="{{ section.settings.button_url }}" class="btn py-3.5 px-6 lg:px-8 uppercase text-sm leading-4 font-bold font-heading" title="{{ section.settings.button_text }}">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Banner text button",
    "tag": "section",
    "settings": [
      {
        "type": "checkbox",
        "id": "fullwidth",
        "label": "Fullwidth",
        "default": false
      },
      {
        "type": "color",
        "id": "color_title",
        "label": "Color title",
        "default": "#2F2F2F"
      },
      {
        "type": "color",
        "id": "color_subtitle",
        "label": "Color subtitle",
        "default": "#4D4D4D"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color",
        "default": "#FAFAFA"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image",
        "info": "Only show when collection image blank"
      },
      {
        "type": "image_picker",
        "id": "background_image_mb",
        "label": "Background image mobile",
        "info": "Only show when collection image blank"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "select",
        "id": "heading_tag",
        "label": "Heading tag",
        "default": "h1",
        "options": [
          {
            "label": "Heading 1",
            "value": "h1"
          },
          {
            "label": "Heading 2",
            "value": "h2"
          },
          {
            "label": "Heading 3",
            "value": "h3"
          },
          {
            "label": "Heading 4",
            "value": "h4"
          },
          {
            "label": "Heading 5",
            "value": "h5"
          }
        ]
      },
      {
        "type": "text",
        "id": "description",
        "label": "description"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button url"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text"
      },
      {
        "type": "header",
        "content": "Padding desktop"
      },
      {
        "type": "range",
        "id": "padding_vertical",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Padding vertical",
        "default": 32
      },
      {
        "type": "range",
        "id": "padding_horizontal",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Padding horizontal",
        "default": 32
      },
      {
        "type": "header",
        "content": "Padding mobile"
      },
      {
        "type": "range",
        "id": "padding_vertical_mb",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Padding vertical ",
        "default": 16
      },
      {
        "type": "range",
        "id": "padding_horizontal_mb",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Padding horizontal",
        "default": 16
      },
      {
        "type": "header",
        "content": "Margin desktop"
      },
      {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Margin top",
        "default": 16
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Margin bottom",
        "default": 16
      },
      {
        "type": "header",
        "content": "Margin mobile"
      },
      {
        "type": "range",
        "id": "margin_top_mb",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Margin top ",
        "default": 16
      },
      {
        "type": "range",
        "id": "margin_bottom_mb",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Margin bottom",
        "default": 16
      }
    ],
    "presets": [
      {
        "name": "Banner text button"
      }
    ]
  }
{% endschema %}