{%- liquid
  assign averageRating = product.metafields.judgeme.badge | split: "data-average-rating='" | last | split: "'" | first
  assign numberRating = product.metafields.judgeme.badge | split: "data-number-of-reviews='" | last | split: "'" | first
  assign product_form_id = 'product-form-' | append: section.id

  for collection in product.collections
    for link in linklists['estimate-shipping'].links
      if collection.url == link.url
        assign collection_metafield = collection
      endif
    endfor
  endfor

  if collection_metafield.metafields.custom.estimate_arrival != blank
    assign min_arrival = collection_metafield.metafields.custom.estimate_arrival | replace: ' ', '' | split: '-' | first
    assign max_arrival = collection_metafield.metafields.custom.estimate_arrival | replace: ' ', '' | split: '-' | last
    assign seconds3 = min_arrival | times: 24 | times: 60 | times: 60
    assign seconds4 = max_arrival | times: 24 | times: 60 | times: 60
  else
    assign seconds3 = 11 | times: 24 | times: 60 | times: 60
    assign seconds4 = 61 | times: 24 | times: 60 | times: 60
  endif

  assign duration_min = seconds3 | divided_by: 24 | divided_by: 60 | divided_by: 60
  assign duration_max = seconds4 | divided_by: 24 | divided_by: 60 | divided_by: 60

  for i in (1..duration_min)
    assign days = 86400 | times: i
    assign mod_date = 'now' | date: '%s' | plus: days | date: '%a'
    if forloop.last == false
      if mod_date == 'Sat'
        assign seconds3 = seconds3 | plus: 86400
      endif
    else
      if mod_date == 'Sat'
        assign seconds3 = seconds3 | plus: 172800
      endif
    endif
    if mod_date == 'Sun'
      assign seconds3 = seconds3 | plus: 86400
    endif
  endfor

  for i in (1..duration_max)
    assign days = 86400 | times: i
    assign mod_date = 'now' | date: '%s' | plus: days | date: '%a'
    if mod_date == 'Sat'
      assign seconds4 = seconds4 | plus: 86400
    endif
    if mod_date == 'Sun'
      assign seconds4 = seconds4 | plus: 86400
    endif
  endfor

  if collection_metafield.metafields.custom.order_ship != blank
    assign min_order_ship = collection_metafield.metafields.custom.order_ship | replace: ' ', '' | split: '-' | first
    assign max_order_ship = collection_metafield.metafields.custom.order_ship | replace: ' ', '' | split: '-' | last
    assign seconds = min_order_ship | times: 24 | times: 60 | times: 60
    assign seconds2 = max_order_ship | times: 24 | times: 60 | times: 60
  else
    assign seconds = 3 | times: 24 | times: 60 | times: 60
    assign seconds2 = 6 | times: 24 | times: 60 | times: 60
  endif
  assign duration_min = seconds | divided_by: 24 | divided_by: 60 | divided_by: 60
  assign duration_max = seconds2 | divided_by: 24 | divided_by: 60 | divided_by: 60

  for i in (1..duration_min)
    assign days_min_1 = 86400 | times: i
    assign mod_date_min_1 = 'now' | date: '%s' | plus: days_min_1 | date: '%a'

    if forloop.last == false
      if mod_date_min_1 == 'Sat'
        assign seconds = seconds | plus: 86400
      endif
    else
      if mod_date_min_1 == 'Sat'
        assign seconds = seconds | plus: 172800
      endif
    endif
    if mod_date_min_1 == 'Sun'
      assign seconds = seconds | plus: 86400
    endif
  endfor


  for i in (1..duration_max)
    assign days_max_1 = 86400 | times: i
    assign mod_date_max_1 = 'now' | date: '%s' | plus: days_max_1 | date: '%a'

    if forloop.last == false
      if mod_date_max_1 == 'Sat'
        assign seconds2 = seconds2 | plus: 86400
      endif
    else
      if mod_date_max_1 == 'Sat'
        assign seconds2 = seconds2 | plus: 172800
      endif
    endif
    if mod_date_max_1 == 'Sun'
      assign seconds2 = seconds2 | plus: 86400
    endif
  endfor
-%}
{%- assign breadcrumbs_linklist = linklists['breadcrumbs-product'] -%}
{%- assign product_type_link = nil -%}
{%- for link in breadcrumbs_linklist.links -%}
  {%- assign link_title = link.title | downcase -%}
  {%- assign product_type = product.type | downcase -%}
  {%- if product_type != blank and link_title contains product_type -%}
    {%- assign product_type_link = link -%}
  {%- endif -%}
{%- endfor -%}

{% assign collectionHandle = product_type_link.url | split: '/' | last %}
{% assign collectionDetails = collections[collectionHandle] %}

{% assign tags = product.tags | join: ', ' | downcase %}
{% assign fullDescription = '' %}
{% assign identity = product.id |  split: '' | last %}
{% assign countDesc = 0 %}
{% capture fullDescriptionResults %}
  {% for description in shop.metaobjects.product_description.values %}
    {% assign partDescription = true %}
    {% if description.tags != blank %}
      {% for tag in description.tags.value %}
        {% assign downcaseTag = tag.tag | downcase %}
        {% unless tags contains downcaseTag %}
          {% assign partDescription = false %}
        {% endunless %}
      {% endfor %}
    {% else %}
      {% assign partDescription = false %}
    {% endif %}
    {% if description.identity.value contains 'All' or description.identity.value contains identity %}
      {% if partDescription %}
        {% assign countDesc = countDesc | plus: 1 %}
        {% if description.content.value != blank %}
          <div class="font-body text-sm leading-5 font-light text-primary mb-3 lg:mb-4">
            {% for element in description.content.value.children %}
              {% if element.type == "paragraph" %}
                {% for item in element.children %}
                  {% if item.type == 'text' %}
                    {% if item.value %}
                      <p{% if item.bold %} class="font-medium"{% endif %}>{{ item.value | join: ' ' }}</p>
                    {% else %}
                      {% for strong in item.children %}
                        {% if strong.bold %}
                          <strong>{{ strong.value | join: ' ' }}</strong>
                        {% else %}
                          {{ strong.value }}
                        {% endif %}
                      {% endfor %}
                    {% endif %}
                  {% endif %}
                  {% if item.type == 'link' %}
                    <a href="{{ item.url }}" target="{{ item.target }}"{% if item.bold %} class="font-medium"{% endif %} title="{{ item.title }}">
                      {% if item.value %}
                        {{ item.value }}
                      {% else %}
                        {% for strong in item.children %}
                          {% if strong.bold %}
                            <strong>{{ strong.value }}</strong>
                          {% else %}
                            {{ strong.value }}
                          {% endif %}
                        {% endfor %}
                      {% endif %}
                    </a>
                  {% endif %}
                {% endfor %}
              {% endif %}
              {% if element.type == "list" %}
                <ul>
                  {% for item in element.children %}
                    {% for children in item.children %}
                      <li{% if item.bold %} class="font-medium"{% endif %}>{{ children.value }}</li>
                    {% endfor %}
                  {% endfor %}
                </ul>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      {% endif %}
    {% endif %}
    {% if countDesc == 3 %}
      {% break %}
    {% endif %}
  {% endfor %}
  {% if collectionDetails.metafields.custom.product_details.value != blank %}
    <div class="product-details">
      {% for details in collectionDetails.metafields.custom.product_details.value %}
        {% if details.identity.value contains 'All' or details.identity.value contains identity %}
          {% for element in details.content.value.children %}
            {% if element.type == "paragraph" %}
              {% for item in element.children %}
                {% if item.type == 'text' %}
                  {% if item.value %}
                    <p{% if item.bold %} class="font-medium"{% endif %}>{{ item.value | join: ' ' }}</p>
                  {% else %}
                    {% for strong in item.children %}
                      {% if strong.bold %}
                        <strong>{{ strong.value | join: ' ' }}</strong>
                      {% else %}
                        {{ strong.value }}
                      {% endif %}
                    {% endfor %}
                  {% endif %}
                {% endif %}
                {% if item.type == 'link' %}
                  <a href="{{ item.url }}" target="{{ item.target }}"{% if item.bold %} class="font-medium"{% endif %} title="{{ item.title }}">
                    {% if item.value %}
                      {{ item.value }}
                    {% else %}
                      {% for strong in item.children %}
                        {% if strong.bold %}
                          <strong>{{ strong.value }}</strong>
                        {% else %}
                          {{ strong.value }}
                        {% endif %}
                      {% endfor %}
                    {% endif %}
                  </a>
                {% endif %}
              {% endfor %}
            {% endif %}
            {% if element.type == "list" %}
              <ul>
                {% for item in element.children %}
                  {% for children in item.children %}
                    <li{% if children.bold %} class="font-medium"{% endif %}>{{ children.value }}</li>
                  {% endfor %}
                {% endfor %}
              </ul>
            {% endif %}
          {% endfor %}
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
{% endcapture %}

<section id="MainProduct-{{ section.id }}" class="page-width" data-section="{{ section.id }}">
  <div class="flex flex-wrap lg:flex-nowrap">
    <div class="product-media-wrapper w-full{% if product.media.size > 0 %} lg:max-w-[calc(100%_-_492px)]{% else %} lg:max-w-full{% endif %} overflow-hidden h-fit transition-all duration-200 static lg:sticky top-4">
      {% render 'product-media-gallery', product: product %}
      <tabs-component class="product-infortab transition-height relative hidden lg:block{% if product.media.size > 1 %} ml-24{% endif %} mt-8">
        <div class="tab-headings flex items-center pb-3 border-b border-solid border-primary">
          <div class="tab-heading flex capitalize text-base xl:text-lg font-semibold leading-6 text-center items-center gap-1.5 font-heading cursor-pointer text-primary hover:text-primary transition-all lg:pr-2 xl:pr-5 border-r border-primary" data-id="{{ section.id }}-description">
            {% render 'icon-description', class: 'w-5 h-5 flex-none lg:hidden xl:block' %}<span>{{ 'products.product.description' | t }}</span>
          </div>
          <div class="tab-heading flex capitalize text-base xl:text-lg font-semibold leading-6 text-center items-center gap-1.5 font-heading cursor-pointer text-primary hover:text-primary transition-all lg:px-2 xl:px-5 border-r border-primary active" data-id="{{ section.id }}-information">
            {% render 'icon-shipping', class: 'w-5 h-5 flex-none lg:hidden xl:block' %}
            <span>{{ 'products.product.shipping' | t }}</span>
          </div>
          <div class="relative flex capitalize text-base xl:text-lg font-semibold leading-6 text-center items-center gap-1.5 font-heading cursor-pointer text-primary hover:text-primary transition-all lg:pl-2 xl:pl-5" id="{{ section.id }}-review" data-id="{{ section.id }}-review">
            {% render 'icon-message', class: 'w-5 h-5 flex-none lg:hidden xl:block' %}
            <span>{{ 'products.product.review' | t }}</span>
            <a href="#{{ product.id }}-review" onclick="document.querySelector('#{{ product.id }}-review').click();" class="block absolute top-0 left-0 h-full w-full" rel="nofollow">
              <span class="text-sm leading-4 text-primary uppercase lg:hidden">{{ 'products.product.read' | t }}</span>
            </a>
          </div>
          {% render 'share-social', product: product, class: ' lg:pl-2 xl:pl-5 ml-auto', hide: true %}
        </div>

        <div class="tab-detail transition-height lg:hidden product-description py-4 pb-6 text-sm leading-5 font-light text-primary " data-id="{{ section.id }}-description">
          {% if fullDescriptionResults != blank %}
            {{ fullDescriptionResults }}
          {% endif %}
          {% if product.description != blank %}
            {{ product.description }}
          {% endif %}
        </div>
        <div class="tab-detail transition-height py-6 relative" data-id="{{ section.id }}-information">
            <div class="flex gap-2 items-center mb-3">
              <p class="sub-title note text-sm text-primary font-light leading-5">{{ 'products.shipping_information.estimated_arrival' | t }}:</p>
              <p class="m-0 text-base text-primary leading-6 underline font-normal">
                {{ 'now' | date: "%s" | plus: seconds3 | date: "%b %d" }} - {{ 'now' | date: "%s" | plus: seconds4 | date: "%b %d" }}
              </p>
            </div>
            <div class="icon-text grid grid-cols-3 items-start p-4 bg-background max-w-[486px] rounded">
              <div class="icon-text-wrapper group relative w-full justify-center flex flex-col items-center text-center">
                <div class="group relative mb-2.5 w-full before:content-empty before:lg:content-none before:border-primary before:border-dashed before:border-t-2 before:block before:w-1/2 before:right-0 before:absolute before:top-1/2 before:-translate-y-1/2 before:z-0">
                  <span class="icon p-1.5 mx-auto bg-primary rounded-full leading-none block w-8 h-8 relative">{% render 'icon-box-delivery', class: 'w-4.5 h-4.5 inline align-middle text-center' %}</span>
                </div>
                <div class="date-text group">
                  <span class="text-xs lg:text-sm text-primary font-heading font-semibold leading-4 block">
                    {%- assign mod_today = 'now' | date: '%a' -%}
                    {% if shop.locale == 'de' %}
                      {% if mod_today == 'Sat' %}
                        <span>{{ "now" | date: '%s' | plus: 172800 | date: "%d %b" }}</span>
                      {% elsif mod_today == 'Sun' %}
                        <span>{{ "now" | date: '%s' | plus: 86400 | date: "%d %b" }}</span>
                      {%- else -%}
                        <span>{{ "now" | date: "%d %b" }}</span>
                      {% endif %}
                    {% else %}
                      {% if mod_today == 'Sat' %}
                        <span>{{ "now" | date: '%s' | plus: 172800 | date: "%b %d" }}</span>
                      {% elsif mod_today == 'Sun' %}
                        <span>{{ "now" | date: '%s' | plus: 86400 | date: "%b %d" }}</span>
                      {%- else -%}
                        <span>{{ "now" | date: "%b %d" }}</span>
                      {% endif %}
                    {% endif %}
                  </span>
                  <span class="note text-xs mt-0.5 font-light leading-5 text-primary block">
                    {{ 'products.shipping_information.order_placed' | t }}
                  </span>
                </div>
                <span class="shadow-tooltip tooltip group-hover:opacity-100 group-hover:visible">{{ 'products.shipping_information.order_placed_mess' | t }}</span>
              </div>
              <div class="icon-text-wrapper group relative w-full justify-center flex flex-col items-center text-center">
                <div class="group relative mb-2.5 w-full before:content-empty before:lg:content-none before:border-primary before:border-dashed before:border-t-2 before:block before:w-full left-0 before:absolute before:top-1/2 before:-translate-y-1/2 before:z-0">
                  <span class="icon p-1.5 mx-auto bg-primary rounded-full leading-none block w-8 h-8 relative">{% render 'icon-delivery', class: 'w-4.5 h-4.5 inline align-middle text-center' %}</span>
                </div>
                <div class="date-text group">
                  <span class="text-xs lg:text-sm text-primary font-heading font-semibold leading-4 block">
                    {% if shop.locale == 'de' %}
                      {{ 'now' | date: "%s" | plus: seconds | date: "%d" }}-{{ 'now' | date: "%s" | plus: seconds2 | date: "%d" }} {{ 'now' | date: "%s" | plus: seconds | date: "%b" }}
                    {% else %}
                      {{ 'now' | date: "%s" | plus: seconds | date: "%b %d" }}-{{ 'now' | date: "%s" | plus: seconds2 | date: "%d" }}
                    {% endif %}
                  </span>
                  <span class="note text-xs mt-0.5 font-light leading-5 text-primary block">
                    {{ 'products.shipping_information.order_ships' | t }}
                  </span>
                </div>
                <span class="shadow-tooltip tooltip group-hover:opacity-100 group-hover:visible">{{ 'products.shipping_information.order_ships_mess' | t }}</span>
              </div>
              <div class="icon-text-wrapper group relative w-full justify-center flex flex-col items-center text-center">
                {% assign datec = 'now' | date: "%s" | plus: seconds3 | date: "%b %d" %}
                {% assign datecc = 'now' | date: "%s" | plus: seconds4 | date: "%b %d" %}
                {% assign date = datec | append: '-' | append: datecc %}
                <div class="group relative mb-2.5 w-full before:content-empty before:lg:content-none before:border-primary before:border-dashed before:border-t-2 before:block before:w-1/2 left-0 before:absolute before:top-1/2 before:-translate-y-1/2 before:z-0">
                  <span class="icon p-1.5 mx-auto bg-primary rounded-full leading-none block w-8 h-8 relative">{% render 'icon-gift-box', class: 'w-4.5 h-4.5 inline align-middle text-center' %}</span>
                </div>
                <div class="date-text group">
                  <span class="text-xs lg:text-sm text-primary font-heading font-semibold leading-4 block">
                    {% if shop.locale == 'de' %}
                      {{ 'now' | date: "%s" | plus: seconds3 | date: "%d %b" }}-{{ 'now' | date: "%s" | plus: seconds4 | date: "%d %b" }}
                    {% else %}
                      {{ 'now' | date: "%s" | plus: seconds3 | date: "%b %d" }}-{{ 'now' | date: "%s" | plus: seconds4 | date: "%b %d" }}
                    {% endif %}
                  </span>
                  <span class="note text-xs mt-0.5 font-light leading-5 text-primary block">
                    {{ 'products.shipping_information.delivered' | t }}
                  </span>
                </div>
                <span class="shadow-tooltip tooltip group-hover:opacity-100 group-hover:visible">{{ 'products.shipping_information.delivered_mess' | t: date: date }}</span>
              </div>
            </div>
            {% if section.settings.shipping_description %}
              <div class="mt-6 shipping-description">
                {{ section.settings.shipping_description }}
              </div>
            {% endif %}
        </div>
        <div class="tab-detail review transition-height lg:hidden py-10 pb-6 !h-auto" id="{{ section.id }}-review" data-id="{{ section.id }}-review">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when '@app' -%}
                {% render block %}
            {%- endcase -%}
          {%- endfor -%}
        </div>

      </tabs-component>
    </div>
    <product-infor class="block w-full{% if product.media.size > 0 %} lg:max-w-[492px] lg:pl-7.5{% endif %} mt-6 lg:mt-0" id="ProductInfo-{{ section.id }}" data-product="{{ product.handle }}" data-recently-view="{{ settings.recently_view_limit }}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'text' -%}
            <p class="text-sm lg:text-base leading-4 {% if block.settings.text_style == 'uppercase' %} uppercase{% elsif block.settings.text_style == 'subtitle' %} normal-case{% endif %}">
              {{- block.settings.text -}}
            </p>
          {%- when 'title' -%}
            <div class="mb-5 lg:mb-6">
              <h1 class="text-base leading-4 lg:text-h4 lg:leading-4 font-semibold mb-2 font-heading">{{ product.title | escape }}</h1>
              <div class="relative">
                <a href="#{{ product.id }}-review" onclick="document.querySelector('#{{ product.id }}-review').click();" class="lg:!block absolute top-0 left-0 h-full w-full" rel="nofollow"></a>
                {{ product.metafields.judgeme.badge | replace: '"jdgm-prev-badge', '"jdgm-prev-badge' }}
              </div>
            </div>
          {%- when 'price' -%}
            <div id="price-{{ section.id }}" role="status" {{ block.shopify_attributes }}>
              {%- render 'price' , product: product , use_variant: true , show_badges: true , show: true -%}
            </div>
            <div class="h-4 mb-5 lg:mb-6 relative"><div class="absolute top-0 left-0 block w-full h-full" data-pp-message data-pp-placement="product"></div></div>
          {%- when 'popup' -%}
            <modal-opener class="product-popup-modal__opener no-js-hidden quick-add-hidden" data-id="#PopupModal-{{ block.id }}" {{ block.shopify_attributes }}>
              <button id="ProductPopup-{{ block.id }}" class="product-popup-modal__button link" type="button" aria-haspopup="dialog">
                {{ block.settings.text | default: block.settings.page.title }}
              </button>
            </modal-opener>
            <a href="{{ block.settings.page.url }}" class="product-popup-modal__button link no-js">
              {{- block.settings.text -}}
            </a>
          {%- when 'shipping-box' -%}
            <div class="py-3 px-5 rounded bg-background grid gap-2 mb-4 lg:mb-6 w-fit">
              <div class="flex gap-2 items-center">
                <span class="flex gap-2 items-center text-primary text-sm leading-5 font-light">{% render 'icon-clock-loading' , class: 'w-5 h-5 text-primary' %} {{ 'products.product.estimated_delivery' | t }}</span>
                <span class="text-primary text-sm leading-5 font-normal underline">{{ 'now' | date: "%s" | plus: seconds3 | date: "%b %d" }} - {{ 'now' | date: "%s" | plus: seconds4 | date: "%b %d" }}</span>
              </div>
              <span class="flex gap-2 items-center text-primary text-sm font-light leading-5">{% render 'icon-normal-truck' , class: 'w-5 h-5 text-primary' %}
                <span>{{ 'products.product.shipping_caculated_html' | t }}</span>
              </span>
            </div>
          {%- when 'variant_picker' -%}
            {%- unless product.has_only_default_variant -%}
              <variant-radios class="block border-t border-primary pt-6 scroll-m-14 lg:scroll-m-31" id="variant-radios-{{ section.id }}" data-section="{{ section.id }}" data-url="{{ product.url }}" {% if update_url == false %} data-update-url="false" {% endif %}>
                {%- for option in product.options_with_values -%}
                  {% assign fatherIndex = forloop.index0 %}
                  {% if option.name == 'Product' %}
                    {% assign activeType = option.selected_value %}
                    <fieldset class="js product-form__input block mb-8 {% if forloop.last %}!mb-0{% endif %} selector-wrapper data-layer-{{ fatherIndex }}" data-name="Product">
                      <legend class="form__label mb-3 flex gap-2 text-sm text-primary uppercase font-bold font-heading leading-5">{{ 'products.product.product_type' | t }}:<span class="selected-value text-primary font-light font-body">{{ option.selected_value }}</span>
                      </legend>
                      <div class="option-values flex flex-wrap gap-2">
                        {%- for value in option.values -%}
                          <input
                            type="radio"
                            id="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}"
                            name="{{ option.name }}"
                            value="{{ value | escape }}"
                            data-index="{{ fatherIndex }}"
                            class="absolute opacity-0 invisible option-item {% if option.selected_value == value %} selected {% endif %}"
                            form="{{ product_form_id }}"
                            {% if option.selected_value == value %}
                            checked
                            {% endif %}>
                          <label for="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}" class="option-item font-normal text-xs lg:text-sm leading-6 lg:leading-4 min-h-[35px] lg:min-h-[36px] bg-primary text-primary border border-primary-250 p-2 flex text-center rounded items-center justify-center option-size-label min-w-12 max-w-3-col-variant w-full">
                            {{ value }}
                          </label>
                        {%- endfor -%}
                      </div>
                    </fieldset>
                  {% elsif option.name == 'Color' or option.name == 'Farbe' or option.name == 'Colore' or option.name == 'Couleur' %}
                    <fieldset class="js product-form__input block mb-8 {% if forloop.last %}!mb-0{% endif %} option-color-wrapper data-layer-{{ fatherIndex }}" data-name="Color">
                      <legend class="form__label mb-3 flex gap-2 text-sm text-primary uppercase font-bold font-heading leading-5">{{ option.name }}:
                        <span class="selected-value text-primary font-light font-body">{{ option.selected_value | remove: '-1' | remove: '-2' | remove: '-3' | remove: '-4' | remove: '-5' }}</span>
                        <span class="require-option capitalize font-light text-red-500 font-heading text-sm lg:text-base !leading-[20px] hidden">{{ 'products.product.require' | t }}</span>
                        {% if forloop.index == 3 %}
                          {% assign option1 = product.options_with_values[1].name | split: " " | last %}
                          <span class="message-option capitalize font-light text-red-500 font-heading text-sm lg:text-base !leading-[20px] hidden">{{ 'products.product.message_option' | t: option: option1 }}</span>
                        {% endif %}
                      </legend>
                      <div class="option-color flex flex-wrap gap-2">
                        {% assign values = '' %}
                        {%- for value in option.values -%}
                          {%- unless values contains value -%}
                            {%- liquid
                              assign values = values | join: ','
                              assign values = values | append: ',' | append: value
                              assign values = values | split: ','
                              assign bgColor = value | split: ' ' | first | handle
