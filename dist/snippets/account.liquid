<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/intl-tel-input@18.1.1/build/css/intlTelInput.css">

<div class="account-address">
  <div class="text-h5 md:text-h4 text-primary font-heading font-semibold capitalize mb-6"> {{ 'customer.account.greeting' | t: name: customer.name }}</div>
  <account-information class="block">
    <div class="account-info__wrapper">
      <form id="customer_update" action="" class="grid grid-cols-1 md:grid-cols-2 gap-3 lg:gap-y-5">
        <div class="w-full">
          <label class="block font-heading text-base text-primary leading-4 font-normal capitalize mb-2" for="customer_first_name">{{ 'customer.information.first_name' | t }}</label>
          <input class="border border-primary focus:border-primary-250 hover:border-primary active:border-primary-250 !ring-0 font-light border-solid w-full text-sm leading-5 lg:text-base lg:leading-6 px-6 py-3 rounded-full"
                 type="text" data-name="name" id="customer_first_name" name="customer[firstName]" value="{{ customer.first_name }}" placeholder="{{ 'customer.information.pl_first_name' | t }}" >
        </div>
        <div class="w-full">
          <label class="block font-heading text-base text-primary leading-4 font-normal capitalize mb-2" for="customer_last_name">{{ 'customer.information.last_name' | t }}</label>
          <input class="border border-primary focus:border-primary-250 hover:border-primary active:border-primary-250 !ring-0 font-light border-solid w-full text-sm leading-5 lg:text-base lg:leading-6 px-6 py-3 rounded-full"
                 type="text" data-name="name" id="customer_last_name" name="customer[lastName]" value="{{ customer.last_name }}" placeholder="{{ 'customer.information.pl_last_name' | t }}" >
        </div>
        <div class="w-full md:col-span-2">
          <label class="block font-heading text-base text-primary leading-4 font-normal capitalize mb-2" for="customer_email">{{ 'customer.information.email' | t }}</label>
          <input class="border border-primary bg-primary focus:border-primary-250 hover:border-primary active:border-primary-250 !ring-0 font-light border-solid w-full text-sm leading-5 lg:text-base lg:leading-6 px-6 py-3 rounded-full pointer-events-none"
                 type="email" data-name="email" id="customer_email" name="customer[email]" value="{{ customer.email }}" placeholder="{{ 'customer.information.pl_email' | t }}" >
        </div>
        <button type="submit" class="btn btn-2 text-sm leading-none px-6 py-3.5 !font-heading !font-bold !uppercase w-full mt-3 lg:mt-1 md:w-fit" disabled>{{- 'customer.information.button_save_change' | t -}}</button>
      </form>
    </div>
  </account-information>
</div>